{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web"
    ]
  },
  "engines": {
    "node": ">=12",
    "yarn": ">=1.15"
  },
  "scripts": {
    "start": "concurrently \"yarn workspace web start\" \"yarn workspace api start\"",
    "plop": "plop"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "plop": "^2.7.4"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "ignorePatterns": [
      "api/dist/*.js"
    ]
  }
}
